% Rendering  double and triple bonds parallel bond strokes
\pgfdeclaredecoration { mcfsecondstroke } { initial }
    {
        \state{initial}[ width = \pgfdecoratedpathlength-1sp ]
        {
            \pgfmoveto{ \pgfpointorigin }
        }
        \state{final}
        {
            \pgflineto{ \pgfpointorigin }
        }
    }
 
